# AWS Credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=eu-central-1

# DVC Remote Storage
DVC_REMOTE_URL=s3://healthalliance-dvc-storage

# MLflow Tracking
MLFLOW_TRACKING_URI=http://localhost:5050
MLFLOW_EXPERIMENT_NAME=health-risk-prediction

# FastAPI
API_SECRET_KEY=generate_secure_key_here
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Key Auth (comma-separated list of valid API keys)
API_KEYS=key-for-dkfz,key-for-ukhd,key-for-embl

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Database
POSTGRES_USER=healthalliance
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=healthalliance_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://healthalliance:change_this_password@localhost:5432/healthalliance_db

# Airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://healthalliance:password@localhost:5432/airflow_db

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=change_this_password

# Institutional API Keys
INSTITUTION_API_KEY_DKFZ=dkfz_key_here
INSTITUTION_API_KEY_UKHD=ukhd_key_here
INSTITUTION_API_KEY_EMBL=embl_key_here

# On-Premise S3-Compatible Storage (MinIO)
ONPREM_S3_ENDPOINT=http://localhost:9000
ONPREM_S3_ACCESS_KEY=minioadmin
ONPREM_S3_SECRET_KEY=minioadmin_change_in_production
ONPREM_S3_BUCKET=healthalliance-onprem-data
